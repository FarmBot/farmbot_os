<html lang="en">
  <head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Configure your Farmbot account </title>
    <link rel="stylesheet" href="/styles.css">
  </head>

  <body>
    <h1>Configure your FarmBot</h1>
    <div class="widget">
      <div class="widget-header">
        <h5>FarmBot Web App Account</h5>
      </div>
      <div class="widget-content">
        <form method=post action=configure_credentials>
          <fieldset>

            <label>Email</label>
            <p><input value="<%= email %>" type=email name=email value=></p>

            <label>Password</label>

            <p>
            <%= if first_boot do %>
              <input value="<%= password %>" type="password" name=password></p>
            <% else %>
              <input value="Already Configured" type="text"></p>
              <input value="<%= password %>" type="hidden" name=password></p>
            <% end %>

            <label> Server </label>
            <p><input value="<%= server %>" type=text name=server></p>

          </fieldset>
      </div>
    </div>
    <div class="button">
      <input type=submit value="Finish">
    </div>
    </form>

  </body>

</html>
